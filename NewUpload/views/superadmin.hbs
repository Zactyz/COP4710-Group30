<!DOCTYPE html>
<style>
    #flex {
    display: flex;
    display: -webkit-flex;
    line-height: 30px;
    }
</style>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
    <nav>
        <h4> Exhibition Center Event Website</h4>
        <ul>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
    <h1 style="text-align:center;">Super Admin</h1>

    <div class="container mt-4" id="flex">

            <form action="/auth/orderByUser" method="POST">
                <select id="user_id" name="user_id">
                    {{#each users}}
                    <option value={{this.id}}>{{this.name}} - {{this.id}}</option>
                    {{/each}}
                </select>
                <input type="hidden" id="users" name="users" value={{users}}>
                <input type="hidden" id="admins" name="admins" value={{admins}}>
                <button type="submit" class="btn-sm btn-primary">Display this User's Events</button>
            </form>

            <form action="/auth/orderByAdmin" method="POST" class="ml-4">
                <select id="admin_id" name="admin_id">
                    {{#each admins}}
                    <option value={{this.id}}>{{this.name}} - {{this.id}}</option>
                    {{/each}}
                </select>
                <input type="hidden" id="admins" name="admins" value={{admins}}>
                <input type="hidden" id="users" name="users" value={{users}}>
                <button type="submit" class="btn-sm btn-primary">Display this Admin's Hosted Events</button>
            </form>
    </div>

    <div>
    {{#if events}}
        {{#if admin}}
            <h5 style="text-align:center;" class="mt-4">Displaying Events Hosted by Admin {{name}}</h5>
        {{/if}}
        {{#if user}}
            <h5 style="text-align:center;" class="mt-4">Displaying Events participated by User {{name}}</h5>
        {{/if}}
    {{#each events}}
    <div class="container mt-4">
    <div class="card">
            <div class="card-header">
            {{this.title}}
            </div>
            <div class="card-body">
                Description: {{this.description}}</br>
                Event Url: {{this.url}}</br>
                Start Date: {{this.start_date}}</br>
                End Date: {{this.end_date}}</br>
                Event Address: {{this.address}}</br>
            </div>    
        </div>
    </div>
    {{/each}}

    {{else}}
    <h1 style="text-align:center;" class="mt-4" >No Events</h1>
    {{/if}}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
</body>
</html>
